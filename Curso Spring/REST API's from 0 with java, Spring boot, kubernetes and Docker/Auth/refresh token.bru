meta {
  name: refresh token
  type: http
  seq: 2
}

put {
  url: {{baseUrl}}/auth/refresh/romulo
  body: none
  auth: inherit
}

headers {
  Authorization: Bearer {{refreshToken}}
}

body:json {
  {
    "username": "romulo",
